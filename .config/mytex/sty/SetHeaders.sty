%=====> Define header <==============================
\usepackage{fancyhdr}
\pagestyle{fancy}
%\fancyhf{}

%% LE: left even
%% RO: right odd
%% CE, CO: center even, center odd
%% My name for when I print my lecture notes to use for an open book exam.
%
\fancypagestyle{homework}{
\fancyhead[RO,LE]{\textit{\@lecture}} % Right odd,  Left even
\fancyhead[RE,LO]{\textit{\@author}}% Right even, Left odd
%
\fancyfoot[RO,LE]{\thepage }  % Right odd,  Left even
\fancyfoot[RE,LO]{}          % Right even, Left odd
\fancyfoot[C]{\sectionmark}     % Center
}

%====> Espacio para el encabezado <==================
% \setlength{\headheight}{15pt}
% \addtolength{\topmargin}{-0.15pt}

%==< Definir SEP >=============================================================
\renewcommand{\headrulewidth}{0pt}
\fancypagestyle{pres}{
  \pagenumbering{Roman}
  \fancyhead{}
  \fancyfoot[C]{\thepage}
}
\fancypagestyle{plainPres}{
  \fancyhead{}
  \fancyfoot[C]{\thepage}
}
\fancypagestyle{cuerpo}{
  \pagenumbering{arabic}
  \fancyhead[RO,LE]{\thepage}
  \fancyfoot{}
}
\fancypagestyle{plainCuerpo}{
  \fancyhead[RO,LE]{\thepage}
  \fancyfoot{}
}
%==< Definir SEP >=============================================================
\fancypagestyle{uplain}{
  \fancyfoot{}
  \ifthenelse{\equal{\theunishort}{UCIMED}}{
    \fancyhead[R]{Página \thepage/\pageref*{LastPage}}
    \fancyfoot[L]{\textsc{\thepartial}\:-\:\classcode\:-\:\thecycle}
  }{
  \ifthenelse{\equal{\theunishort}{UCR}}{
    \fancyhead[LE,RO]{\thepage}
    \fancyhead[RE,LO]{\textsc{\thepartial}}
    \fancyfoot[LE,RO]{\textsc{\classcode\:-\:\thecycle}}
    \fancyfoot[RE,LO]{\theauthor}
  }{
    \fancyhead[LE,RO]{\thepage}
    \fancyfoot[LE,RO]{\thepartial\:-\:\classcode\:-\:\thecycle}
    \fancyfoot[RE]{\theauthor}
    \fancyfoot[LO]{\thetitle}
  }}
}
\fancypagestyle{partial}{
  \fancyfoot{}
  \fancyhead[LO]{
    \usebox{\ulogo}
  }
  \ifthenelse{\equal{\theunishort}{UCR}}{
    \setlength{\headheight}{117pt}
    \addtolength{\topmargin}{-68pt}
    \fancyhead[RO]{
      \vbox to \ht\ulogo{
        \vfil
        \usebox{\schoollogo}\\
        \textbf{\classname}
      }
    }
  }{
  \ifthenelse{\equal{\theunishort}{UFide}}{
    \setlength{\headheight}{162pt}
    \addtolength{\textheight}{-160pt}
    \fancyhead[LO]{}
    \fancyhead[C]{
      \usebox{\ulogo}\\[0.5em]
      \textbf{\theuni}\\[0.5em]
      \textbf{\theschool}\\[0.5em]
      \textbf{\classname}\\[0.5em]
      \textbf{Prof. \theauthor}\\[0.5em]
      \textbf{Caso \Roman{partialNumber} - \thedate}
    }
    \fancyfoot[C]{\thepage}
  }{
  \ifthenelse{\equal{\theunishort}{UCIMED}}{
    \setlength{\headheight}{120pt}
    \fancyhead[C]{
      \textbf{\Large{\thepartial}}\\
      \textbf{\classname}\\[2em]
      \thedate \\
      \total{totalPoints}\,puntos $\leftrightarrow 100\%$ \\
    }
    \fancyhead[RO]{
      \vbox to \ht\ulogo{Página \thepage/\pageref*{LastPage}}
    }
  }{}}}
}
